#include <stdio.h>

int main() {
    int a[5][5], i, j, count = 0;

    printf("Enter 5x5 matrix elements:\n");
    for(i = 0; i < 5; i++) {
        for(j = 0; j < 5; j++) {
            scanf("%d", &a[i][j]);
            if(a[i][j] != 0)
                count++;
        }
    }

    printf("\nSparse Matrix in Triplet Format:\n");
    printf("Row\tColumn\tValue\n");

    for(i = 0; i < 5; i++) {
        for(j = 0; j < 5; j++) {
            if(a[i][j] != 0) {
                printf("%d\t%d\t%d\n", i, j, a[i][j]);
            }
        }
    }

    return 0;
}
